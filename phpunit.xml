<?xml version="1.0" encoding="UTF-8" ?>

<phpunit stopOnFailure="false" failOnRisky="true" failOnWarning="true" bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="Test">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">src/</directory>
        </include>
    </coverage>
</phpunit>
